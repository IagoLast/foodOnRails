<div class="recipe-container container" >
  <%= image_tag(@recipe.avatar.url(:medium), class: "recipe-avatar col-md-6") %>
  <div class="info col-md-6">
    <h3> <%= @recipe.name %> </h3>
    <p> <%= @recipe.short_desc %></p>
    <%= render partial: "features", locals: {recipe: @recipe} %>
  </div>


  <div class="col-md-12">
    <h4>Ingredientes</h4>
      <pre class="text-justify"> 
        <%= @recipe.ingredients %> 
      </pre>
  </div>  

  <div class="col-md-12">
    <h4>Descripcion</h4>
    <p class="text-justify"> 
      <%= @recipe.desc %> 
    </p>

  <%= link_to 'Back', recipes_path %> |
  <% if user_signed_in? and current_user.id == @recipe.user_id %>
    <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
    <%= link_to 'Delete Recipe', @recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%end%>  
  </div>
</div>
