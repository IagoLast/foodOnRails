<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-md-3 recipe-thumb"  >


     <%= link_to image_tag(recipe.avatar.url(:medium), class: "recipe-avatar"), recipe %>

      <h5> <%= recipe.name %> </h5>
      <div class="info">

        <p class="text-justify" > <%= recipe.short_desc %></p> 
        <div class="features">
          <%if recipe.high_prot? %>
            <%= image_tag('/images/recipes/icons/hp.png', class: "icon-feature") %>
          <%end%>  
          <%if recipe.vegetarian? %>
          <%end%>  
            <%= image_tag('/images/recipes/icons/vegetarian.png', class: "icon-feature") %>
          <%if recipe.gluten_free? %>
            <%= image_tag('/images/recipes/icons/gluten-free.png', class: "icon-feature") %>
          <%end%>  
          <%if recipe.vegan? %>
            <%= image_tag('/images/recipes/icons/vegan.png', class: "icon-feature") %>
          <%end%>  
        </div>



      <% if user_signed_in? and current_user.id == recipe.user.id %>
          <%= link_to 'Edit', edit_recipe_path(recipe) %>
          <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>

      </div> <!-- info -->
    </div> <!-- recipe-thumb -->
  <% end %>
</div>