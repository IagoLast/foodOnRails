<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-md-3 recipe-thumb"  >


     <%= link_to image_tag(recipe.avatar.url(:medium)), recipe %>

      <h5> <%= recipe.name %> </h5>
      <p class="text-justify" > <%= recipe.short_desc %></p> 
      <%= link_to 'Show', recipe %>
      <% if user_signed_in? and current_user.id == recipe.user.id %>
          <%= link_to 'Edit', edit_recipe_path(recipe) %>
          <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  <% end %>
</div>